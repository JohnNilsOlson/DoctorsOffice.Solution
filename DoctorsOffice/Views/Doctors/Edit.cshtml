@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor

<h2>Edit</h2>

<h4>Edit this doctor: @Html.DisplayFor(model => model.FirstName, model => model.LastName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.Doctor.Id)
<div class="form-group">
  @Html.LabelFor(model => model.FirstName)
  @Html.EditFor(model => model.FirstName, new { @class = "form-control", @required = true})
</div>

<div class="form-group">
  @Html.LabelFor(model => model.LastName)
  @Html.EditFor(model => model.LastName, new { @class = "form-control", @required = true})
</div>
  
  <input type="submit" value="Save" />
  }
  <p>@Html.ActionLink("Back to doctors list", "Index")</p>